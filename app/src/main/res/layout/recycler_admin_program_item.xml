<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardRecyclerMyProgram"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textMainDataItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/teal_200"
                    android:textSize="16dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textSecondDataItem"
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:textStyle="italic"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="12dp"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textThirtyDataItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="TextView" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnRemoveProgramItem"
                        android:contentDescription="Eliminar programación"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/white"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="8dp"
                        android:src="@drawable/ic_baseline_delete_24_gray_dark" />
                    <ImageButton
                        android:id="@+id/btnEditProgramItem"
                        android:contentDescription="Editar programación"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/white"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="8dp"
                        android:src="@drawable/ic_baseline_edit_calendar_24_gray_dark" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>