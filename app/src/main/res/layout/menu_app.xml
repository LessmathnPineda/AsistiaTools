<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textMenuLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="@color/purple_700"
            android:text="" />

        <androidx.cardview.widget.CardView
            android:id="@+id/contentBadgeToolbar"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            app:contentPadding="5dp"
            android:padding="30dp">

            <LinearLayout
                android:id="@+id/contentBadgeToolbar1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center">
                <TextView
                    android:id="@+id/textUserMenuLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black_color"
                    android:text="Olivia Grace" />
                <ImageView
                    android:layout_width="26dp"
                    android:id="@+id/imageMenuLayout"
                    android:layout_margin="4dp"
                    android:src="@drawable/default_icon"
                    android:layout_height="26dp"></ImageView>
                <ImageView
                    android:layout_width="18dp"
                    android:id="@+id/iconShowMenuLayout"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24_purple_500"
                    android:layout_height="18dp"></ImageView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>